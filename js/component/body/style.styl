.man-figure {
  width: calc(100% - 40px);
  max-width: 240px;
  margin-left: auto;
  margin-right: auto;
  position: absolute;
  left: 50%; top: 50%;
  transform: translate(-50%, -50%);
  user-select: none;

  &:before {
    content: '';
    display: block;
    padding-bottom: 177%;
  }

  &.marine-skin {
    background: url(../../../img/army-skin.jpg) no-repeat 50% / contain;
  }

  &.afghan-skin {
    background: url(../../../img/afghan-skin.jpg) no-repeat 50% / contain;
  }
}

