.body-part__timer {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  white-space: nowrap;
}

.first-aid-icon {
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  width: 12px; height: 12px;
  border: 1px solid #000;
  margin-left: 5px;
  margin-top: -3px;
  position: relative;

  &:before, &:after {
    content: '';
    display: block;
    background: red;
    position: absolute;
    left: 50%; top: 50%;
    transform: translate(-50%, -50%);
  }

  &:before {
    width: 8px; height: 2px;
  }

  &:after {
    width: 2px; height: 8px;
  }
}

.broken-armor-icon {
  display: block;
  width: 20px; height: 20px;
  background: url(../../../img/broken-shield.png) no-repeat 50% / contain;
  position: absolute;
  left: 100%; top: 0;
  z-index: 10;
  margin-left: 20px;
}
