.body-part--arm {
  width: 15%;
  top: 0;
  margin-top: 30%;

  &:before {
    content: '';
    display: block;
    padding-bottom: 400%;
  }
}

.body-part--arm.body-part--left {
  right: 50%;
  margin-right: 25%;
  transform: rotate(30deg);
}

.body-part--arm.body-part--right {
  left: 50%;
  margin-left: 25%;
  transform: rotate(-30deg);
}
