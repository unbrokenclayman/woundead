.body-part--arm {
  width: 15%;
  top: 0;
  margin-top: 30%;

  &:before {
    content: '';
    display: block;
    padding-bottom: 400%;
  }
}

.body-part--arm.body-part--left {
  right: 50%;
  margin-right: 25%;
  transform: rotate(30deg);

  .body-part__timer {
    right: 100%;
    margin-right: 20px;
  }
}

.body-part--arm.body-part--right {
  left: 50%;
  margin-left: 25%;
  transform: rotate(-30deg);

  .body-part__timer {
    left: 100%;
    margin-left: 20px;
  }
}
