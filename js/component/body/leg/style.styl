.body-part--leg {
  width: 20%;
  top: 0;
  margin-top: 93%;

  &:before {
    content: '';
    display: block;
    padding-bottom: 394%;
  }

  &:after {
    content: '';
    display: block;
    width: 100%; height: 100%;
    position: absolute;
    left: 50%; top: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
  }
}

.body-part--leg.body-part--left {
  right: 50%;
  margin-right: -1%;

  .body-part__timer {
    right: 100%;
    margin-right: 20px;
  }

  &.body-part--easily-wounded:after {
    background: url(../../../../img/easy-wound-4.png) no-repeat 100% 0 / 90% auto;
    left: 60%;
  }

  &.body-part--seriously-wounded:after {
    background: url(../../../../img/serious-wound-4.png) no-repeat 100% 0 / 90% auto;
    left: 60%;
  }
}

.body-part--leg.body-part--right {
  left: 50%;
  margin-left: 2%;

  .body-part__timer {
    left: 100%;
    margin-left: 20px;
  }

  &.body-part--easily-wounded:after {
    background: url(../../../../img/easy-wound-5.png) no-repeat 100% 0 / 90% auto;
    left: 35%;
  }

  &.body-part--seriously-wounded:after {
    background: url(../../../../img/serious-wound-5.png) no-repeat 100% 0 / 90% auto;
    left: 35%;
  }
}
