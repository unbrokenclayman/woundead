.settings-trigger {
  display: block;
  border: none;
  width: 30px; height: 30px;
  position: absolute;
  right: 5px; top: 5px;
  background: url(../../../img/cog-icon.png) no-repeat 50% / 80% auto;
}

.settings-window {
  width: 100%; height: 100%;
  background: #fff;
  position: fixed;
  left: 0; top: 0;
  z-index: 1000;
  padding: 40px 20px 20px;
  box-sizing: border-box;
}

.settings-window__close {
  display: block;
  width: 30px; height: 30px;
  border: none;
  background: none;
  position: absolute;
  right: 5px; top: 5px;
  transform: rotate(-45deg);

  &:before, &:after {
    content: '';
    display: block;
    background: #000;
    position: absolute;
    left: 50%; top: 50%;
    transform: translate(-50%, -50%);
  }

  &:before {
    width: 2px; height: 10px;
  }

  &:after {
    width: 10px; height: 2px;
  }
}

.settings-group +.settings-group {
  margin-top: 20px;
}

.settings-caption {
  font-weight: bold;
  text-transform: uppercase;
  margin-bottom: 10px;
}

.settings-item select {
  width: 100%; height: 36px;
  line-height: @height;
}

.settings-item + .settings-item {
  margin-top: 10px;
}

.reset-trigger {
  display: block;
  border: none;
  width: 30px; height: 30px;
  background: url(../../../img/reset-icon.png) no-repeat 50% / 60% auto;
  position: absolute;
  bottom: 10px; right: 10px;
  z-index: 200;
}
